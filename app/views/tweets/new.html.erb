<% if @tweet.errors.any? %>
<h3>エラーがあります</h3>
<ul <ul style="color: red">
<% @tweet.errors.full_messages.each do |err| %>
<li><%= err %></li>
<% end %>
</ul>
<% end %>

<%= form_for @tweet , url: {action: :create} do |f| %>
<%= f.label :message, 'ツイート内容' %>
<%= f.text_field :message %>
<%= f.submit '投稿' %>
<% end %>